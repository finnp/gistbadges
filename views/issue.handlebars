{{#if loggedin}}
  <form action="/add" method="post" class="form-horizontal">
  <fieldset>

  <!-- Form Name -->
  <legend>Create Badge</legend>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="badgename">Badge Name</label>  
    <div class="col-md-6">
    <input id="badgename" name="badgename" type="text" placeholder="Best badger ever" class="form-control input-md" required>
      
    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="badgedesc">Badge Description</label>  
    <div class="col-md-6">
    <input id="badgedesc" name="badgedesc" type="text" placeholder="For the best badger ever" class="form-control input-md" required>
      
    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="badgereceiver">Receiver</label>  
    <div class="col-md-6">
    <input id="badgereceiver" name="badgereceiver" type="email" placeholder="best@badger.it" class="form-control input-md" required>
      
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-6">
      <div class="checkbox">
        <label>
          <input type="checkbox" name="mailhash" value="checked" checked> Hash the email address
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="badgeissuer">Issuer</label>
    <div class="col-md-4">
      <input disabled id="badgeissuer" name="badgeissuer" type="text" value="{{githubName}}" class="form-control input-md">
    </div>
  </div>

  <!-- Textarea -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="badgereq">Badge Requirements</label>
    <div class="col-md-4">                     
      <textarea class="form-control" id="badgereq" name="badgereq" required></textarea>
    </div>
  </div>
  
  <div id="droparea">
    <h1 id="drop-info">Drop your badge image here.</h1>
    <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"/>
    <input type="hidden" id="badgeimage" name="badgeimage" value="" />
  </div>
  
  <button type="submit" class="btn btn-primary">Create</button>

  </fieldset>
  </form>
{{else}}
  <div class="jumbotron">
    <h1>Issue an Open Badge</h1>
    <p>Log in with <a href="https://github.com/">GitHub</a> to issue a <a href="http://www.openbadges.org/" target="_blank">Open Badge</a> to someone else.
    The badge assertion will be hosted on <a href="https://gist.github.com/">GitHub Gist</a> and you will get a link to send to the person receiving the badge.
    All you need is a PNG image for the badge and you are ready to get started.</p>
    <p><a href="/login" class="btn btn-primary btn-lg" role="button">Log in with GitHub</a></p>
  </div>
  <a href="http://www.openbadges.org/" target="_blank">
    <img src="/openbadges.png" />
  </a>
{{/if}}